<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textColor="@color/white"
    android:background="@color/darkBackground"
    tools:context="com.mohawk.osama.capstone.VolumeActivity$PlaceholderFragment">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginRight="5dp"
        android:id="@+id/upNextComicCover" />

    <RelativeLayout
        android:id="@+id/upNextDetails1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_toRightOf="@+id/upNextComicCover"
        android:layout_toEndOf="@+id/upNextComicCover">

        <TextView
            android:id="@+id/upNextIssueNumber"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/upNextIssueName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/upNextIssueNumber" />

        <TextView
            android:id="@+id/upNextIssueDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/upNextIssueName" />

        <ImageButton
            android:id="@+id/upNextReadButton"
            android:background="@drawable/ic_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/upNextIssueDate" />

        <TextView
            android:id="@+id/upNextReadLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Mark as read"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:layout_below="@+id/upNextIssueDate"
            android:layout_toRightOf="@+id/upNextReadButton" />

        <TextView
            android:id="@+id/upNextIssueID"
            android:layout_width="0dp"
            android:layout_height="0dp" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/upNextDetails2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upNextComicCover">

        <TextView
            android:id="@+id/upNextDescriptionLabel"
            android:text="@string/description"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/upNextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/upNextDescriptionLabel"/>

    </RelativeLayout>

</RelativeLayout>
