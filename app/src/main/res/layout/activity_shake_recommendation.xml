<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:textColor="@color/white"
    android:background="@color/darkBackground"
    tools:context="com.mohawk.osama.capstone.ShakeRecommendationActivity">

    <ImageView
        android:layout_width="125dp"
        android:layout_height="175dp"
        android:layout_marginRight="5dp"
        android:id="@+id/shakeComicCover" />

    <RelativeLayout
        android:id="@+id/shakeDetails1"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_toRightOf="@+id/shakeComicCover"
        android:layout_toEndOf="@+id/shakeComicCover">

        <TextView
            android:id="@+id/shakeYear"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/shakePublisher"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/shakeYear" />

        <TextView
            android:id="@+id/shakeIssueCount"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/shakePublisher" />

        <ImageButton
            android:id="@+id/shakeAddButton"
            android:background="@drawable/ic_add_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/shakeIssueCount" />

        <TextView
            android:id="@+id/shakeAddLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Add to Collection"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:layout_below="@+id/shakeIssueCount"
            android:layout_toRightOf="@+id/shakeAddButton" />

        <ImageButton
            android:id="@+id/shakeRemoveButton"
            android:background="@drawable/ic_remove_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:layout_below="@+id/shakeIssueCount"
            android:visibility="visible" />

        <TextView
            android:id="@+id/shakeRemoveLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Remove from Collection"
            android:paddingTop="8dp"
            android:paddingLeft="35dp"
            android:layout_below="@+id/shakeIssueCount"
            android:layout_toRightOf="@+id/shakeAddButton"
            android:visibility="visible" />
    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/shakeDetails2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shakeDetails1">

        <TextView
            android:id="@+id/shakeDescriptionLabel"
            android:text="@string/description"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/shakeDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_below="@+id/shakeDescriptionLabel"/>

    </RelativeLayout>

</RelativeLayout>
